# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

  # If you have an app extension (e.g. notifications), declare it as a nested target
  # so CocoaPods knows the host target. This ensures proper pod installation for
  # embedded targets like extensions.
  target 'notifications' do
    use_frameworks!
    inherit! :search_paths
    pod 'Firebase/Messaging'
  end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
    
    if target.name == 'notifications'
      target.build_configurations.each do |config|
        config.build_settings['APPLICATION_EXTENSION_API_ONLY'] = 'YES'
      end
    end
  end
  
  # Fix SDWebImage CoreServices issue for Xcode 15+
  sdwebimage_path = File.join(installer.sandbox.root, 'SDWebImage/SDWebImage/Core/SDImageIOCoder.m')
  if File.exist?(sdwebimage_path)
    puts "üîß Patching SDImageIOCoder.m for Xcode 15+ compatibility..."
    
    begin
      # Make file writable first (important for CI)
      FileUtils.chmod(0644, sdwebimage_path)
      
      content = File.read(sdwebimage_path)
      original_content = content.dup
      
      # Only comment out CoreServices import
      content.gsub!('#import <CoreServices/CoreServices.h>', '// #import <CoreServices/CoreServices.h>')
      
      # Replace the problematic UTType code block (around line 207-215)
      old_block = <<~OBJC
        CFStringRef uti = UTTypeCreatePreferredIdentifierForTag(kUTTagClassFilenameExtension, (__bridge CFStringRef)pathExtension, kUTTypeImage);
        if (uti == NULL) {
            imageUTType = kUTTypeImage;
        } else if (!UTTypeIsDynamic(uti)) {
            imageUTType = uti;
        } else {
            imageUTType = kUTTypeImage;
            CFRelease(uti);
        }
      OBJC
      
      new_block = <<~OBJC
        // CoreServices code disabled for Xcode 15+ compatibility
        // Default to public.image UTI
        imageUTType = (__bridge CFStringRef)@"public.image";
      OBJC
      
      content.gsub!(old_block.strip, new_block.strip)
      
      if content != original_content
        File.write(sdwebimage_path, content)
        puts "‚úÖ Successfully patched SDImageIOCoder.m"
      else
        puts "‚ö†Ô∏è  No changes needed or pattern not found"
      end
    rescue => e
      puts "‚ùå Failed to patch SDImageIOCoder.m: #{e.message}"
      puts "Continuing with build anyway..."
    end
  else
    puts "‚ö†Ô∏è  SDImageIOCoder.m not found at #{sdwebimage_path}"
  end
end